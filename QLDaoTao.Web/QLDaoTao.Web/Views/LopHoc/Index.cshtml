@model IEnumerable<QLDaoTao.Web.Models.LopHoc.LopHocViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/dataTable/datatables.min.css" />

<h1>Danh sách lớp học</h1>

<p>
    <a class="btn btn-primary " asp-controller="LopHoc" asp-action="TaoLopHoc"><i class="fas fa-plus"></i></a>
</p>
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaLop)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenLop)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayKhaiGiang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayKetThuc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuongHV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GhiChu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaLop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayKhaiGiang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayKetThuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuongHV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GhiChu)
            </td>
            <td>
                <a class="btn btn-success" href='@Url.Action("XemLopHoc","LopHoc",new {id = item.LopHoc_Id })'><i class="fas fa-info"></i></a>
                <a class="btn btn-warning" href='@Url.Action("SuaLopHoc","LopHoc",new {id = item.LopHoc_Id })'><i class="fas fa-tools"></i></a>
                <a class="btn btn-danger" href='@Url.Action("XoaLopHoc","LopHoc", new {id = item.LopHoc_Id })' onclick="return confirm('Bạn có chắc xóa lớp học này không')"><i class="fas fa-trash-alt"></i></a>
                <a class="btn btn-primary" href='@Url.Action("DanhSachHocVienTheoLopHoc","HocVien", new {id = item.LopHoc_Id })'><i class="fas fa-users"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>


<script type="text/javascript" src="~/dataTable/datatables.min.js"></script>
<script type="text/javascript">
        $(document).ready(function () {
            $('#example').dataTable({
                "language": {
                    "info": "Tổng số: _TOTAL_ lớp học hiện hành",
                    "search": "Tìm kiếm: ",
                    "infoEmpty": "Tổng số: 0 lớp học hiện hành",
                    "lengthMenu": "Hiện _MENU_ dữ liệu",
                    "infoFiltered": "(lọc ra từ tổng số _MAX_ lớp hiện hành )"
                }
            });
        });
</script>
